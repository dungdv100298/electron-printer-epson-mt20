{
  "appId": "com.company.epson-printer",
  "productName": "EPSON Printer App",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "build/**/*",
    "node_modules/**/*"
  ],
  "win": {
    "target": "nsis",
    "icon": "assets/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "EPSON Printer App"
  },
  "mac": {
    "target": "dmg",
    "icon": "assets/icon.icns"
  },
  "linux": {
    "target": "AppImage",
    "icon": "assets/icon.png"
  },
  "npmRebuild": false,
  "nodeGypRebuild": false
}
